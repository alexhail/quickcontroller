# Quick Controller - Environment Configuration
# Copy this file to .env and fill in your values

# Database (PostgreSQL + TimescaleDB)
QC_DB_HOST=localhost
QC_DB_PORT=5432
QC_DB_USER=quickcontroller
QC_DB_PASSWORD=devpassword
QC_DB_NAME=quickcontroller
QC_DATABASE_URL=postgresql://${QC_DB_USER}:${QC_DB_PASSWORD}@${QC_DB_HOST}:${QC_DB_PORT}/${QC_DB_NAME}

# Redis
QC_REDIS_HOST=localhost
QC_REDIS_PORT=6379
QC_REDIS_URL=redis://${QC_REDIS_HOST}:${QC_REDIS_PORT}/0

# Security
QC_JWT_SECRET=change-this-to-a-secure-random-string
QC_ENCRYPTION_KEY=change-this-to-a-32-byte-key

# API
QC_API_HOST=0.0.0.0
QC_API_PORT=8000
QC_DEBUG=true
QC_CORS_ORIGINS=http://localhost:5173

# Frontend (Vite dev server)
VITE_API_URL=http://localhost:8000
